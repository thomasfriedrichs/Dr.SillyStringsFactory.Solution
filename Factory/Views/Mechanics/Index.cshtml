@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Mechanics</h1>

@if (@Model.Count == 0)
{
  <h3>No mechanics have been added yet!</h3>
} 

<ul>
  @foreach(Mechanic mechanic in Model)
  {
    <li>@Html.ActionLink($"{mechanic.Name}", "Details", new { id = mechanic.MechanicId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new mechanic", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>