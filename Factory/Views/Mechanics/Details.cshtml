@{
  Layout = "_Layout";
}

@model Factory.Models.Mechanic;

<h2>Mechanic Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This mechanic does not maintain any machines</p>
}
else
{
  <h4>Machines the mechanic maintains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.Description</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to Mechanics", "Index")</p>
<p>@Html.ActionLink("Edit Mechanic", "Edit", new { id = Model.MechanicId })</p>
<p>@Html.ActionLink("Delete Mechanic", "Delete", new { id = Model.MechanicId })</p>